# Server Configuration
PORT=3000
URL=http://localhost:3000

# CORS Configuration
# Comma-separated list of allowed origins
# Use '*' for development or specify exact origins for production
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Download Directories
# Temporary directory for downloads in progress
DOWNLOAD_TEMP_DIR=./data/temp

# Final destination directory for completed downloads
DOWNLOAD_DEST_DIR=./data/downloads

# Storage Configuration
# Minimum available storage in GB required to start downloads
MIN_STORAGE_GB=5

# Download Queue Configuration
# Maximum number of pending downloads allowed simultaneously
MAX_PENDING_DOWNLOADS=10

# Cleanup Configuration
# Days to retain orphaned files before cleanup
CLEANUP_RETENTION_DAYS=7

# Download timeout in minutes
DOWNLOAD_TIMEOUT_MINUTES=60

# Event System Configuration
# Size of the circular buffer for SSE events
EVENT_BUFFER_SIZE=100

# Throttle time in milliseconds for progress events
PROGRESS_THROTTLE_MS=500
